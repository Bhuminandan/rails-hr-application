<div class="col-lg-12">
  <div class="card mt-3 text-center">
    <div class="card-body">
      <h4 class="card-title">Employees</h4>
    </div>
  </div>

  <!-- Adding notice block -->
  <%= content_tag(:div, flash[:notice], class: "alert alert-success mt-3 block") if flash[:notice] %>

  <!-- Add employee button -->
  <%= link_to "Create Employee", "/employees/new", class: "btn btn-primary mt-3 mb-3" %>

  <table class="table table-striped table-bordered mt-3">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.full_name %></td>
        <td><%= employee.personal_email %></td>
        <td><%= employee.full_address %></td>
        <td>
          <div class="dropdown">
            <button
              class="btn btn-primary dropdown-toggle"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Actions
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "View", "/employees/#{employee.id}", class: "btn
                dropdown-item" %>
              </li>
              <li>
                <%= link_to "Edit", "/employees/#{employee.id}/edit", class:
                "btn mr-2 dropdown-item" %>
              </li>
              <li>
                <%= link_to "Delete", "/employees/#{employee.id}", method: :delete, data: { confirm: "Are you sure?" }, class: "btn dropdown-item" %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
