<div class="col-lg-12">
  <div class="card mt-3 text-center">
    <div class="card-body">
      <h4 class="card-title">Employee Details</h4>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-6 mb-3">
        <h2 class="card-title mb-3">Personal Information</h2>
        <p class="lead"><strong>First Name: </strong> <%= @employee.first_name %> </strong></p>
        <p class="lead"><strong>Last Name: </strong> <%= @employee.last_name %> </strong></p>
        <p class="lead"><strong>Personal Email: </strong> <%= @employee.personal_email %> </strong></p>
    </div>
    <div class="col-lg-6  mb-3">
        <h2 class="card-title mb-3">Address</h2>
        <p class="lead"><strong>City: </strong> <%= @employee.city %> </strong></p>
        <p class="lead"><strong>State: </strong> <%= @employee.state %> </strong></p>
        <p class="lead"><strong>Country: </strong> <%= @employee.country %> </strong></p>
        <p class="lead"><strong>Pincode: </strong> <%= @employee.pincode %> </strong></p>
        <p class="lead"><strong>Address Line 1: </strong> <%= @employee.address_line_1 %> </strong></p>
        <p class="lead"><strong>Address Line 2: </strong> <%= @employee.address_line_2.blank? ? "N/A" : @employee.address_line_2 %> </strong></p>
    </div>
    <div>
        <%= link_to 'Edit', edit_employee_path(@employee), class: 'btn btn-primary' %>
        <%= link_to 'Back', employees_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  
  <div class="card mt-3 text-center">
  <div class="card-body">
    <h4 class="card-title">Document Details</h4>
  </div>
</div>

  <% @employee.documents.each do |document| %>
    <div class="col-lg-12">
      <div class="row mt-3">
        <div class="col-lg-6 mb-3">
            <p class="lead"><strong>Document Id: </strong> <%= document.id %> </strong></p>
            <% if document.image.attached? %>
            <p class="lead"><strong></strong> <%= image_tag document.image, class: "img-fluid rounded w-50" %> </strong></p> 
            <% end %>
            <p class="lead"><strong>Document Name: </strong> <%= document.name %> </strong></p>
            <p class="lead"><strong>Document Type: </strong> <%= document.doc_type %> </strong></p>
            <p class="lead"><strong>Employee: </strong> <%= document.employee.full_name %> </strong></p>
        </div>
        <div>
            <%= link_to 'Edit', edit_document_path(document), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to 'Back', documents_path, class: 'btn btn-secondary mt-3' %>

</div>