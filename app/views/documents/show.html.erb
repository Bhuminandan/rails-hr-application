<div class="col-lg-12">
  <div class="card mt-3 text-center">
    <div class="card-body">
      <h4 class="card-title">Document Details</h4>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-6 mb-3">
        <p class="lead"><strong>Document Id: </strong> <%= @document.id %> </strong></p>
        <% if @document.image.attached? %>
        <p class="lead"><strong></strong> <%= image_tag @document.image, class: "img-fluid rounded w-50" %> </strong></p> 
        <% end %>
        <p class="lead"><strong>Document Name: </strong> <%= @document.name %> </strong></p>
        <p class="lead"><strong>Document Type: </strong> <%= @document.doc_type %> </strong></p>
        <p class="lead"><strong>Employee: </strong> <%= @document.employee.full_name %> </strong></p>
    </div>
    <div>
        <%= link_to 'Edit', edit_document_path(@document), class: 'btn btn-primary' %>
        <%= link_to 'Back', documents_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>